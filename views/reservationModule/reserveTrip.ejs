<%- include('../common/headers.ejs') %>
<link rel="stylesheet" href="/reservationModule/reserveTrip/reserveTrip.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
<script src="https://cdn.jsdelivr.net/gh/mgalante/jquery.redirect@master/jquery.redirect.js"></script>
<script defer src="/reservationModule/reserveTrip/reserveTrip.js"></script>

<title>Reserve Trip</title>

<div class="header-container">
  <div class="header-title">
    Reserve Trip
  </div>
  <div class="step-container">
    <div class="step step-active"></div>
    <div class="step"></div>
    <div class="step"></div>
    <div class="step last"></div>
  </div>
</div>

<div>
  Select trip type
</div>
<label for="round-trip">Round trip</label>
<input id="round-trip" type="radio" name="trip-type" value="round-trip" />
<label for="one-way">One way</label>
<input id="one-way" type="radio" name="trip-type" value="one-way" />

<div>
  <label for="purpose">Purpose:</label>
  <input id="purpose"/>
</div>

<div>
  Select pick-up and drop-off points
</div>
<div class="select-date-container">
  <div class="from-container">
    <label for="from">From</label>
    <select name="from" id="from">
      <option disabled selected value>Select Start Location</option>
      <option>CARMONA</option>
      <option>DLSU MNL</option>
      <option>DLSU LAG</option>
      <option>PASEO</option>
      <option>PAVILION</option>
      <option>WALTER</option>
    </select>
  </div>
  <div id="from-icon">i</div>
  <div id="round-trip-arrow">
    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="19" viewBox="0 0 18 19" fill="none">
      <path d="M12.9621 10L11.8026 8.85913L14.8463 5.83829H0V4.16171H14.8463L11.8026 1.14583L12.9621 0L18 5L12.9621 10Z" fill="black"/>
      <path d="M5.0379 19L6.19742 17.8591L3.15369 14.8383H18V13.1617H3.15369L6.19742 10.1458L5.0379 9L0 14L5.0379 19Z" fill="black"/>
    </svg>
  </div>
  <div id="one-way-arrow">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="21" viewBox="0 0 24 21" fill="none">
      <path d="M-5.14742e-07 9.22408L19.1534 9.22408L11.767 1.82609L13.5612 1.31457e-06L24 10.5117L13.5612 21L11.767 19.2207L19.1534 11.7993L-4.02174e-07 11.7993L-5.14742e-07 9.22408Z" fill="black"/>
    </svg>
  </div>
  <div class="to-container">
    <label for="to">To</label>
    <select name="to" id="to">
      <option disabled selected value>Select Destination</option>
      <option>CARMONA</option>
      <option>DLSU MNL</option>
      <option>DLSU LAG</option>
      <option>PASEO</option>
      <option>PAVILION</option>
      <option>WALTER</option>
    </select>
  </div>
  <div id="to-icon">i</div>
</div>


<div>
  Select date/s
</div>
<div>
  Weekdays
</div>
<div id="weekdays-container">

</div>
<div>
  Saturdays
</div>
<div id="saturdays-container">

</div>

<button id="next">Next</button>


<div id="image-modal" class="modal">
  <!-- Modal content -->
  <div class="modal-content">
    <image id="image" width="100%"></image>
  </div>
</div>