<%- include('../common/headers.ejs') %>
<link rel="stylesheet" href="/myTripModule/tripDetail/tripDetail.css" />
<script defer src="/myTripModule/tripDetail/tripDetail.js"></script>

<title>Trip Detail</title>

<div class="header-container">
  <div class="header">Trip details</div>
</div>

<div class="main-container">
  <div>
    <div class="sub-header">
      STATUS
    </div>
    <div id="status"></div>
  </div>
  
  <div>
    <div class="sub-header margin-top-30 ">Time</div>
    <div id="origin-time"></div>
  </div>
  
  <div class="information-container">
    <div class="information-item">
      <div class="sub-header">
        ORIGIN
      </div>
      <div class="sub-header">
        DESTINATION
      </div>
    </div>
    <div class="information-item">
      <div id="origin-date">
      </div>
      <div id="destination-date">
      </div>
    </div>
    <hr solid />
    <div class="information-item">
      <div id="origin-location">
      </div>
      <div id="destination-location">
      </div>
    </div>
  </div>
  
  <form action="/trip/cancel/<%-detail.id%>" method="POST">
    <button id="cancel">CANCEL TRIP</button>
  </form>
  
</div>
<script>
  const tripDetail = JSON.parse(`<%- JSON.stringify(detail) %>`);
  console.log(tripDetail)
</script>